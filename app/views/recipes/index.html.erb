<h1 class="jumbotron">All Recipes</h1>

<span class="listing">
<ul>
<% @recipes.each do |recipe| %>

  <li><a href="/recipes/<%=recipe.id%>"><%= recipe.name %></a></li>

<% end %>
</ul>
</span>

<br/>
<br/>

<h3>Add a New Recipe</h3>

<%= render('layouts/errors', :object => @recipe) %>

<form action="/recipes/" method="post">
  <%= render('form') %>
  <button>Create Recipe</button>
</form>

<p><a href='/'>Go back to the main menu</a></p>
